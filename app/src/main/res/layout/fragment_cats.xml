<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/transition_name_for_cats">


    <TextView
            android:id="@+id/cats_title"
            android:layout_width="wrap_content"
            android:layout_gravity="center|top"
            android:layout_height="wrap_content"
            android:text="@string/title_cats"
            android:textSize="@dimen/textSize_big"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal3_cats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/playfair_display"
            app:layout_constraintVertical_bias="0.7" />

    <Button
            android:id="@+id/button_get_cat"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_normal"
            android:layout_height="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal2_cats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.9"
            android:text="@string/getCats"
            app:icon="@drawable/ic_cat_for_button" />

    <ImageView
            android:id="@+id/image_cat_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_background"
            android:src="@drawable/cat_black"
            android:paddingStart="@dimen/padding_small_one"
            android:paddingTop="@dimen/padding_small_one"
            android:paddingBottom="@dimen/padding_small_one"
            android:paddingEnd="@dimen/padding_very_small"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal1_cats"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal3_cats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_cats" />

    <ImageView
            android:id="@+id/image_cat_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_background"
            android:paddingEnd="@dimen/padding_small_one"
            android:paddingTop="@dimen/padding_small_one"
            android:paddingBottom="@dimen/padding_small_one"
            android:paddingStart="@dimen/padding_very_small"
            android:src="@drawable/cat_black"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal1_cats"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal3_cats"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_cats"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/image_cat_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_background"
            android:paddingStart="@dimen/padding_small_one"
            android:paddingTop="@dimen/padding_small_one"
            android:paddingBottom="@dimen/padding_small_one"
            android:paddingEnd="@dimen/padding_very_small"
            android:src="@drawable/cat_black"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal2_cats"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal1_cats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_cats" />

    <ImageView
            android:id="@+id/image_cat_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_background"
            android:paddingEnd="@dimen/padding_small_one"
            android:paddingTop="@dimen/padding_small_one"
            android:paddingBottom="@dimen/padding_small_one"
            android:paddingStart="@dimen/padding_very_small"
            android:src="@drawable/cat_black"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal2_cats"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal1_cats"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_cats"
            app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_cats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal1_cats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal2_cats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal3_cats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.14" />

</androidx.constraintlayout.widget.ConstraintLayout>