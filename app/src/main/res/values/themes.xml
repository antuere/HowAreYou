<resources>
    <!-- Base application theme. -->
    <style name="Theme.ZeroApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_main</item>
        <item name="colorPrimaryVariant">@color/teal_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Font -->
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>

        <!-- Elements UI theme -->
        <item name="materialAlertDialogTheme">@style/MyDialogStyle</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Default</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Default.Outlined</item>
        <item name="popupMenuBackground">@drawable/custom_popupmenu_background</item>
        <item name="actionOverflowButtonStyle">@style/actionButtonOverflow</item>
    </style>


    <!-- Dialog theme -->
    <style name="MyDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>


    <!-- Bottom navigation theme -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">

        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.TitleSmall</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.TitleMedium</item>
        <item name="itemActiveIndicatorStyle">
            @style/ThemeOverlay.App.BottomNavigationView.ActiveIndicator
        </item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/teal_bottom</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>


    <!-- Toolbar theme -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorSurface">@color/teal_main</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>


    <!-- FAB theme -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/teal_main</item>
        <item name="colorOnContainer">@color/white</item>
    </style>


    <!-- Card theme -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent.Card</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorOutline">@color/for_card_stoke</item>
    </style>


    <!-- Button theme (filled) -->
    <style name="Widget.App.Button.Default" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Button theme (outlined) -->
    <style name="Widget.App.Button.Default.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">20dp</item>
    </style>

    <!-- Button theme (toggle group) -->
    <style name="Widget.App.Button.Default.ToggleGroup" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="backgroundTint">@color/toggle_button_color_selector</item>
    </style>

    <!-- CircularProgressIndicator theme -->
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator.Medium">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorSize">70dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- Popup overflow menu  button theme -->
    <style name="actionButtonOverflow"   parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

</resources>