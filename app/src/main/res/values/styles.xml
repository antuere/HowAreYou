<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>


    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text.CenterStacked">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_normal_0</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/teal_main</item>
        <item name="android:textSize">@dimen/textSize_normal_0</item>
    </style>

    <style name="Widget.App.Button.Flush" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/teal_main</item>
        <item name="android:textSize">@dimen/textSize_normal_0</item>
    </style>

    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize_small_1</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent.Card" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
</resources>