<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/titleFragment">

    <fragment
            android:id="@+id/titleFragment"
            android:name="com.example.zeroapp.titleFragment.TitleFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_title">
        <action
                android:id="@+id/action_titleFragment_to_history"
                app:destination="@id/historyFragment"
                app:popUpTo="@id/titleFragment"
                app:popUpToInclusive="false" />
    </fragment>
    <fragment
            android:id="@+id/historyFragment"
            android:name="com.example.zeroapp.historyFragment.HistoryFragment"
            android:label="@string/your_past"
            tools:layout="@layout/fragment_history">
        <action
                android:id="@+id/action_history_to_detailFragment"
                app:destination="@id/detailFragment"
                app:popUpTo="@id/historyFragment"
                app:popUpToInclusive="false"
                />
    </fragment>
    <fragment
            android:id="@+id/detailFragment"
            android:name="com.example.zeroapp.detailFragment.DetailFragment"
            android:label="@string/about_day"
            tools:layout="@layout/fragment_detail">
        <argument
                android:name="dayId"
                app:argType="long" />
        <action
                android:id="@+id/action_detailFragment_to_history"
                app:destination="@id/historyFragment"
                app:popUpTo="@id/titleFragment"
                app:popUpToInclusive="false" />
    </fragment>
    <fragment
            android:id="@+id/settingsFragment"
            android:name="com.example.zeroapp.settingsFragment.SettingsFragment"
            android:label="@string/settings"
            tools:layout="@layout/fragment_settings" />
    <fragment
            android:id="@+id/summaryFragment"
            android:name="com.example.zeroapp.summaryFragment.SummaryFragment"
            android:label="@string/summary"
            tools:layout="@layout/fragment_summary" />
</navigation>